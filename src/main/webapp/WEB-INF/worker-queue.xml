		<retry-parameters>
			<task-age-limit>90d</task-age-limit>
			<min-backoff-seconds>60</min-backoff-seconds>
			<max-backoff-seconds>10800</max-backoff-seconds>
			<max-doublings>2</max-doublings>
		</retry-parameters>
	</queue>
	

