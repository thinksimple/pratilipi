<queue-entries>

  <!-- Sends invitation email to referred users. -->
  <queue>
    <name>invite-user</name>
    <rate>1/s</rate>
    <bucket-size>1</bucket-size>
    <max-concurrent-requests>1</max-concurrent-requests>
    <retry-parameters>
      <task-age-limit>90d</task-age-limit>
      <min-backoff-seconds>300</min-backoff-seconds>
      <max-backoff-seconds>300</max-backoff-seconds>
    </retry-parameters>
  </queue>
  
  <!-- Sends welcome email newly registered users. -->
  <queue>
    <name>welcome-user</name>
    <rate>1/s</rate>
    <bucket-size>1</bucket-size>
    <max-concurrent-requests>1</max-concurrent-requests>
    <retry-parameters>
      <task-age-limit>90d</task-age-limit>
      <min-backoff-seconds>300</min-backoff-seconds>
      <max-backoff-seconds>300</max-backoff-seconds>
    </retry-parameters>
  </queue>
  
  <!-- Re-set user password and send an email regarding the same. -->
  <queue>
    <name>reset-password</name>
    <rate>1/s</rate>
    <bucket-size>1</bucket-size>
    <max-concurrent-requests>1</max-concurrent-requests>
    <retry-parameters>
      <task-age-limit>90d</task-age-limit>
      <min-backoff-seconds>300</min-backoff-seconds>
      <max-backoff-seconds>300</max-backoff-seconds>
    </retry-parameters>
  </queue>

  <!-- REQUIRED FOR MARK-1 BACKWARD COMPATIBILITY. -->
  <!-- Sends welcome email to new subscribers and referrals. -->
  <queue>
    <name>new-user</name>
    <rate>1/s</rate>
    <bucket-size>1</bucket-size>
    <max-concurrent-requests>1</max-concurrent-requests>
    <retry-parameters>
      <task-age-limit>90d</task-age-limit>
      <min-backoff-seconds>300</min-backoff-seconds>
      <max-backoff-seconds>300</max-backoff-seconds>
    </retry-parameters>
  </queue>

</queue-entries>